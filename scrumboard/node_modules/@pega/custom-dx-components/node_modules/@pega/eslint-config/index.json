{
  "plugins": ["react", "import", "prettier", "sonarjs", "jest"],
  "reportUnusedDisableDirectives": true,
  "overrides": [
    {
      "files": "*.js",
      "extends": ["./js.json"]
    },
    {
      "files": "*.jsx",
      "extends": ["./jsx.json"]
    },
    {
      "files": "*.ts",
      "extends": ["./ts.json"]
    },
    {
      "files": "*.tsx",
      "extends": ["./tsx.json"]
    },
    {
      "files": ["scripts/*.js", "packages/*/scripts/*.js", "./*.js"],
      "extends": ["./script.json"]
    },
    {
      "files": "*.test.@(js|jsx|ts|tsx)",
      "extends": ["./jest.json"]
    }
  ]
}
