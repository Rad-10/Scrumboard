{
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "strict": ["error", "global"],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": "*.mjs",
      "parserOptions": {
        "sourceType": "module"
      },
      "globals": {
        "exports": "off",
        "require": "off",
        "module": "off",
        "__dirname": "off",
        "__filename": "off"
      },
      "rules": {
        "import/extensions": ["error", "always"]
      }
    }
  ]
}
