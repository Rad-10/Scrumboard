{
  "plugins": ["react", "import", "jest", "sonarjs", "storybook"],
  "reportUnusedDisableDirectives": true,
  "extends": ["plugin:storybook/recommended"],
  "overrides": [
    {
      "files": "*.@(js|mjs|cjs)",
      "extends": ["./js.json"]
    },
    {
      "files": "*.jsx",
      "extends": ["./jsx.json"]
    },
    {
      "files": "*.@(ts|mts|cts)",
      "extends": ["./ts.json"]
    },
    {
      "files": "*.tsx",
      "extends": ["./tsx.json"]
    },
    {
      "files": [
        "scripts/*.@(js|mjs|cjs)",
        "packages/*/scripts/*.@(js|mjs|cjs)",
        "./*.@(js|mjs|cjs)"
      ],
      "extends": ["./script.json"]
    },
    {
      "files": "*.test.@(js|jsx|ts|tsx)",
      "extends": ["./jest.json"]
    }
  ]
}
