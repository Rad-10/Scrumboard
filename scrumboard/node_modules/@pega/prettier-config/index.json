{
  "plugins": ["@prettier/plugin-xml"],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.@(js|jsx|cjs|mjs|ts|cts|mts|tsx)",
      "options": { "parser": "typescript" }
    },
    {
      "files": "*.svg",
      "options": { "xmlWhitespaceSensitivity": "ignore" }
    }
  ]
}
